                double pegar_valor(char atributo[], float area, float populacao, float pib, int turismo, double densidade, double percapita, long int poder) {
    if (strcmp(atributo, "area") == 0) return area;
    else if (strcmp(atributo, "populacao") == 0) return populacao;
    else if (strcmp(atributo, "pib") == 0) return pib;
    else if (strcmp(atributo, "pontosturisticos") == 0) return turismo;
    else if (strcmp(atributo, "densidadepopulacional") == 0) return densidade;
    else if (strcmp(atributo, "pibpercapita") == 0) return percapita;
    else if (strcmp(atributo, "poder") == 0) return poder;                                                                                                           
       }
        double pegar_valor1 (char atributo1[], float area1, float populacao1, float pib1, int turismo1, double densidade2, double percapita2, long int poder2) {
